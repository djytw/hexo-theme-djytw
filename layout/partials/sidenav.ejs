<%
var categoriesList = list_categories({class: 'waves-effect waves-red collect',style: 'none',separator:''}),
    tagsList = list_tags({separator:'',style: 'none'})
    archivesList = list_archives({class: 'waves-effect waves-red collect',style: 'none',separator:''});
%>
<ul id="slide-out" class="sidenav">
  <li>
    <div class="user-view">
      <div class="background">
        <img src="/img/logo.png">
      </div>
      <div class="content">
        <h4><%=config.author%></h4>
        <i class="material-icons md-16">place</i>
        <span><a><%=config.address%></a></span><br>
        <i class="material-icons md-16">email</i>
        <span><a href="mailto:djytw@live.com"><%=config.email%></a></span><br>
        <i class="material-icons md-16">code</i>
        <span><a href="https://github.com/djytw"><%=config.github%></a></span>
      </div>
    </div>
  </li>
  <li><a href="/"><i class="material-icons">home</i>Home</a></li>
  <li>
    <ul class="collapsible collapsible-accordion">
      <li>
        <a class="collapsible-header">Archives<i class="material-icons">archive</i><i class="material-icons right">expand_more</i></a>
        <div class="collapsible-body">
          <ul class="collect">
            <%-archivesList%>
          </ul>
        </div>
      </li>
    </ul>
  </li>
  <li>
    <ul class="collapsible collapsible-accordion">
      <li>
        <a class="collapsible-header">Tags<i class="material-icons">local_offer</i><i class="material-icons right">expand_more</i></a>
        <div class="collapsible-body">
          <div id="tag-tags-m">
            <%-tagsList%>
          </div>
        </div>
      </li>
    </ul>
  </li>
  <li>
    <ul class="collapsible collapsible-accordion">
      <li>
        <a class="collapsible-header">Categories<i class="material-icons">list</i><i class="material-icons right">expand_more</i></a>
        <div class="collapsible-body">
          <ul class="collect">
            <%-categoriesList%>
          </ul>
        </div>
      </li>
    </ul>
  </li>
</ul>